<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/azure2"
        tools:context=".MainActivity">
    <Button
            android:text="@string/jokes"
            android:background="@color/aquamarine2"
            android:textColor="@color/hotPink"
            android:layout_width="wrap_content"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:layout_height="60dp"
            android:id="@+id/r_joke"
            android:layout_marginTop="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/input_text"
            app:layout_constraintVertical_bias="0.953"/>
    <Button
            android:text="@string/joke_text"
            android:background="@color/aquamarine2"
            android:textColor="@color/hotPink"
            android:layout_width="wrap_content"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:layout_height="60dp"
            android:id="@+id/input_text"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/nEndingList" app:layout_constraintHorizontal_bias="0.497"/>
    <Button
            android:text="@string/never_ending_text"
            android:background="@color/aquamarine2"
            android:textColor="@color/hotPink"
            android:layout_width="wrap_content"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:layout_height="60dp"
            android:id="@+id/nEndingList"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:textStyle="bold" android:textSize="30sp"
            android:layout_marginBottom="92dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.494"/>
    <ImageView
            android:src="@drawable/chuck_norris"
            android:layout_width="295dp"
            android:layout_height="238dp"
            android:id="@+id/textView"
            app:layout_constraintBottom_toTopOf="@+id/r_joke" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintVertical_bias="0.325"/>
</androidx.constraintlayout.widget.ConstraintLayout>

